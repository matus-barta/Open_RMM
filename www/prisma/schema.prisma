generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OrgUnit {
  Id           Int        @id @default(autoincrement())
  OrgUnitName  String     @unique
  OrgUnitTitle String
  Computers    Computer[]
}

model Computer {
  Id              Int         @id @default(autoincrement())
  Uuid            String?     @unique @db.Uuid
  CreatedAt       DateTime    @default(now())
  UpdatedAt       DateTime    @updatedAt
  OneTimeKey      String      @unique
  OrgUnitId       Int
  IsAdded         Boolean     @default(false)
  IsAllowed       Boolean     @default(false)
  Antiviruses     Antivirus[]
  ComputerOrgUnit OrgUnit     @relation(fields: [OrgUnitId], references: [Id])
  SystemInfo      SystemInfo?
  Updates         Update[]
  Volumes         Volume[]
}

model SystemInfo {
  Id             Int         @id @default(autoincrement())
  ComputerUuid   String      @unique @db.Uuid
  CreatedAt      DateTime    @default(now())
  UpdatedAt      DateTime    @updatedAt
  PendingReboot  Boolean?
  ComputerName   String
  MachineType    MachineType @default(Unknown)
  LastBootupTime DateTime
  OsVersion      String
  OsName         String
  KernelVersion  String
  Computer       Computer    @relation(fields: [ComputerUuid], references: [Uuid])
}

enum MachineType {
  LXC
  VM
  Physical
  Unknown
}

model Update {
  Id           Int      @id @default(autoincrement())
  ComputerUuid String   @db.Uuid
  CreatedAt    DateTime @default(now())
  Titles       String[]
  Count        Int
  Computer     Computer @relation(fields: [ComputerUuid], references: [Uuid])
}

model Antivirus {
  Id               Int      @id @default(autoincrement())
  ComputerUuid     String   @db.Uuid
  CreatedAt        DateTime @default(now())
  Name             String
  UpdateStatus     String
  ProtectionStatus String
  Computers        Computer @relation(fields: [ComputerUuid], references: [Uuid])
}

model Volume {
  Id            Int      @id @default(autoincrement())
  ComputerUuid  String   @db.Uuid
  CreatedAt     DateTime @default(now())
  VolumeId      String
  VolumeName    String?
  VolumeLetter  String?
  HealthStatus  String
  SizeRemaining Int
  Size          Int
  Computers     Computer @relation(fields: [ComputerUuid], references: [Uuid])
}
